{% extends 'base.html.twig' %}

{% block title %}Roteiro index{% endblock %}

{% block body %}
    <h1>Roteiro index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Id_usuario</th>
                <th>Id_destino</th>
                <th>Data_criacao</th>
                <th>Descricao</th>
                <th>Dias</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for roteiro in roteiros %}
            <tr>
                <td>{{ roteiro.id }}</td>
                <td>{{ roteiro.idUsuario }}</td>
                <td>{{ roteiro.idDestino }}</td>
                <td>{{ roteiro.dataCriacao ? roteiro.dataCriacao|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ roteiro.descricao }}</td>
                <td>{{ roteiro.dias ? roteiro.dias|json_encode : '' }}</td>
                <td>
                    <a href="{{ path('app_roteiro_show', {'id': roteiro.id}) }}">show</a>
                    <a href="{{ path('app_roteiro_edit', {'id': roteiro.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_roteiro_new') }}">Create new</a>
{% endblock %}

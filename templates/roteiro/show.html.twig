{% block title %}Roteiro{% endblock %}

{% block body %}
    <h1>Roteiro</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ roteiro.id }}</td>
            </tr>
            <tr>
                <th>Id_usuario</th>
                <td>{{ roteiro.idUsuario }}</td>
